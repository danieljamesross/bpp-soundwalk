<?xml version='1.0' encoding='utf-8'?>
<widget id="org.bpp.sound.walk" version="1.2.8" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <feature name="BackgroundMode">
        <param name="browser-package" value="BackgroundMode" />
    </feature>
    <gap:config-file parent="CFBundleShortVersionString" platform="ios">
        <string>1208</string>
    </gap:config-file>
    <name>BPP Soundwalk</name>
    <description>
An aural journey through Beckenham Place Park.
    </description>
    <author email="soundlab@bppsoundwalk.org" href="http://bpsoundwalk.org">
        SoundLab
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
